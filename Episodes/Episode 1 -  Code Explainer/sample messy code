def process_data(data_list, operation_type, threshold=100):
    # This function does too many things and has unclear variable names
    results = []
    if operation_type == "add":
        total_sum = 0
        for item in data_list:
            # Magic number 5, unclear why it's there
            total_sum += item * 5
        if total_sum > threshold:
            print("Sum exceeded threshold!")
        results.append(total_sum)
    elif operation_type == "filter":
        filtered_items = []
        for x in data_list:
            # Unclear condition, hardcoded value
            if x % 2 == 0 and x > 50:
                filtered_items.append(x)
        results.extend(filtered_items)
    else:
        # No clear error handling or default behavior
        print("Invalid operation type!")
    return results

# Example usage with different data and operations
data1 = [10, 20, 30, 40, 50]
data2 = [60, 70, 80, 90, 100, 110]

output1 = process_data(data1, "add")
output2 = process_data(data2, "filter", 75) # Threshold is ignored for filter
output3 = process_data([1,2,3], "subtract") # Invalid operation

print(f"Output 1: {output1}")
print(f"Output 2: {output2}")
print(f"Output 3: {output3}")